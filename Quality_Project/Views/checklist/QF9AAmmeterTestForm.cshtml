            <th><input type="text" class="form-control"></th>
        </tr>
        <tr>
            <th>Service</th>
            <th>Yearly</th>
            <th><input type="text" class="form-control"></th>
            <th>Switch board Ref:</th>
            <th><input type="text" class="form-control"></th>
        </tr>
