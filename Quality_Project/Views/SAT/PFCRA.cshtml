<script>
    function addNewRow() {
        // Find the table body
        var tableBody = document.getElementById("testFormTableBody");
        console.log(tableBody);

        // Create a new row
        var newRow = document.createElement("tr");

        // Define the columns
        var columns = [
            { colspan: 3, type: "text", class: "form-control" },
            { colspan: 3, type: "text", class: "form-control" },
            { colspan: 3, type: "text", class: "form-control" },
            { colspan: 3, type: "text", class: "form-control" },
            { colspan: 3, type: "text", class: "form-control" },
            { colspan: 3, type: "text", class: "form-control" },


        ];

        // Loop through columns and create cells
        for (var i = 0; i < columns.length; i++) {
            var cell = document.createElement("td");

            var input = document.createElement("input");
            input.type = columns[i].type;
            input.className = columns[i].class;
            cell.colSpan = columns[i].colspan;
            cell.appendChild(input);
            newRow.appendChild(cell);
        }

        // Append the new row to the table body
        tableBody.appendChild(newRow);
    }
</script>
